{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"rootDir": "./src",
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
		"typeRoots": ["./src/@types", "./node_modules/@types"],
		"removeComments": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
